package com.mycompany.interestrateproject;

//Imports:
import java.util.Scanner;
import java.text.NumberFormat;
import java.util.Locale;


/**
 *
 * @author NWilber2026
 */
public class InterestRateProject {

    public static void main(String[] args) {
        
        //Declare Scanner
        Scanner scan = new Scanner (System.in);
        
        //Ask user for input of money (USD)
        System.out.println("\nInput the financial amount: ");
        //Scan for input
        double amount = scan.nextDouble();
        
        //Ask user for input of months for repayment
        System.out.println("Input how many months for repayment: ");
        //Scan for input
        int months = scan.nextInt();
                     
        //Declare calculator object (referencing other class)
        InterestRateCalculator calculator = new InterestRateCalculator();
        
        //Formatting
            //Format for USD
            NumberFormat usd = NumberFormat.getCurrencyInstance(Locale.US);             
            
            //Format for percentage in interest rate
            NumberFormat percent = NumberFormat.getPercentInstance();
            //Allow for two decimal places in percentages
            percent.setMinimumFractionDigits(2);
                        
        //Method for calculations       
        calculator.calcRepayment(amount, months);
        
        //Print all
        System.out.println("\nInital Loan Amount: " + usd.format(amount));
        System.out.println("Intrest Rate: " + percent.format(InterestRateCalculator.RATE));
        System.out.println("Amount of time to repay: " + months + " months");
        
    }
}    
        
        
//InterestRate Class Begins ---------------------------------------------------------

class InterestRateCalculator {

//Format for USD
    NumberFormat usd = NumberFormat.getCurrencyInstance(Locale.US);           
    
//Public Rate Constant (4.5%)
    public static final double RATE = 0.0453;
    
//Private variables for money and time
    private double finalPayment;
    private double monthlyPayment;
      
//Public method that contains the calculations
    public void calcRepayment (double amount, int months){
    
        //Monthly Payment Calculation
        monthlyPayment = (amount/months) + (amount*RATE/months);
        
        //Total Payment Calculation
        finalPayment = monthlyPayment * months;
         
//Print all        
    System.out.println("Monthly Payment Amount: " + usd.format(monthlyPayment));
    System.out.println("Total Payment Amount: "  + usd.format(finalPayment));
    }
}
