package com.mycompany.randomdiceproject;

import java.util.Random;
import java.util.Scanner;

/**
 *
 * @author NWilber2026
 */
public class RandomDiceProject {

    public static void main(String[] args) {

//Six Sided Die Generator


    //Loop Systems
        //Declare scanner
        Scanner scan = new Scanner(System.in);
        String strIn = "";
        //Ask for imput
        System.out.println("Enter \"r\" to roll the die (press \"x\" to exit) : ");
        //Set target and quit imputs                                                  
        while(true){
            char targetChar = 'r'; //needed imput is r to loop
            char quitChar = 'x'; //ends program if "q" is pressed
            char inputChar = scan.next().charAt(0);
        
        //determine process when quit
        if (inputChar == quitChar){
            System.out.println("Program Terminated");
            break;
        }    
        
        //determine process when looped
        if (inputChar == targetChar) {                   
             
    //Dice System
        //Declare random number generator
        Random generator = new Random();
    
        //Generate 1-6
        int diceRoll;
        diceRoll = generator.nextInt(6)+1;
        System.out.println("Random Dice Roll: " + (diceRoll));  
                        
        }
        }
    }
}  
    
    
