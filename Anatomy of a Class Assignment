package com.mycompany.anatomyofaclass;

/**
 *
 * @author NWilber2026
 */
public class Anatomyofaclass {

    public static void main(String[] args) {
        
/*
    Write a class called Car that has 1 string variable called carBrand
    An int variable called enginePower (in Horse Power)
    A double variable called maxSpeed (in MPH)
    A double variable called price (in $)
    */    
        
    //Car class OBJECTS
    //format: name, horse power, max speed, price
    Car vwBug = new Car("VW Bug", 57, 87.5, 17000);
    Car toyotaPrius = new Car("Toyota Prius", 194, 112.1, 28550);
    Car bmwi8 = new Car("BMW i8", 369, 155.0, 147500);
    Car teslaModel3 = new Car("Tesla Model 3", 510, 163.0, 36990);
    
           
    //Print all
    System.out.println(vwBug);
    System.out.println(toyotaPrius);
    System.out.println(bmwi8);
    System.out.println(teslaModel3);
      
    }
}
    
//Car Class Begins -------------------------------------------------------------
    
class Car { 

    private String carBrand; 
    private int enginePower; //horsepower
    private double maxSpeed; //miles per hour (MPH)
    private double price; //in USD ($)
    
    
    //Base Car Constructor
    public Car (String inBrand){
        carBrand = inBrand;
    }
    
    
    //Full Constructor
        public Car(String inBrand, int inPwr, double inMPH, double inDollars) {
            carBrand = inBrand;
            enginePower = inPwr;
            maxSpeed = inMPH;
            price = inDollars;
        } 
        
        
    //Set car brand
        public String getCarBrand(){
            return carBrand;
        }
        public void setCarBrand(String inBrand){
            carBrand = inBrand;
        }


    //Set engine power
        public int getEnginePower(){
            return enginePower;
        }
        public void setEnginePower(int inPwr){
            enginePower = inPwr;
        }


    //Set max speed    
         public double getMaxSpeed(){
            return maxSpeed;
        }
        public void setMaxSpeed(double inMPH){
            maxSpeed = inMPH;
        }


    //Set price    
         public double getPrice(){
            return price;
        }
        public void setPrice(double inDollars){
            price = inDollars;
        }

    //"toString" method so it will print the strings
    @Override
    public String toString(){
        //Print all as group
        return "Car Brand: " + carBrand + "\nEngine Power: " + enginePower + " horsepower" + "\nMax Speed : " + maxSpeed + " MPH" + "\nPrice : $" + price + "\n";
    }
    
} 
