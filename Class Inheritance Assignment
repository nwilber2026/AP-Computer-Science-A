//------------------------------------------------------------------------------
//Chariot Class Starts
// -- Extension of Vehicle --
//------------------------------------------------------------------------------
class Chariot extends Vehicle
{
    //Chariot variables
    private int Horses = 2; 

    //Defult Chariot Constructor
    public Chariot() 
    {
        super("Ancient Rome", 20, 1, 250);
    }

    //Print all
    @Override
    public String toString() 
    {
        return "\t\t-- Roman Chariot --" + super.toString() + "Horses: " + Horses;
    }
}



//------------------------------------------------------------------------------
//Motorcycle Class Starts
// -- Extension of Vehicle --
//------------------------------------------------------------------------------
class Motorcycle extends Vehicle
{
    //Morotcycle variables
    private boolean sidecar = false;
    private int wheelsNum = 2;

    //Defult Morotcycle Constructor
    public Motorcycle() 
    {
        super("Harley Davidson", 120, 2, 415);
    }

    //Print all
    @Override
    public String toString() 
    {
        return "\t\t-- Morotcycle --" + super.toString() + "Has Sidecar: " + sidecar + "\nNumber of Wheels: " + wheelsNum;
    }
}
