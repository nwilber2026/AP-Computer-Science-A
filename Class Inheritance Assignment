//------------------------------------------------------------------------------
//Spruce Goose Class Starts
// -- Extension of Airplane --
//------------------------------------------------------------------------------
class spruceGoose extends Airplane
{
    //New unique variable
    private String Material = "birch wood";
            
    public spruceGoose() 
    {
        super("Hughes Aircraft Company", 235, 750, 150000, 85, 320);               
    }

    //Print all
    @Override
        public String toString() 
        {
            return "\t\t-- Spruce Goose --" + super.toString() + "\nMaterial: " + Material;
        }     
}



//------------------------------------------------------------------------------
//Space Shuttle Class Starts
// -- Extension of Airplane --
//------------------------------------------------------------------------------
class spaceShuttle extends Airplane
{
    //New unique variable
    private boolean Airlock = true;
    private boolean Space = true;
            
    public spaceShuttle() 
    {
        super("Nasa", 17500, 10, 65000, 20400000, 78);               
    }

    //Print all
    @Override
        public String toString() 
        {
            return "\t\t-- Space Shuttle --" + super.toString() + "\nAirlock?: " + Airlock + "\nSpace Capable?: " + Space;
        }   
}





