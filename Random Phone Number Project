package com.mycompany.randomnumberproject;

import java.util.Random;
import java.util.Scanner;
/**
 *
 * @author NWilber2026
 */
public class RandomNumberProject {

    public static void main(String[] args) {
//Random Phone Number Generator
    
    //Loop Systems
        //Declare scanner
        Scanner scan = new Scanner(System.in);
        String strIn = "";
        //Ask for imput
        System.out.println("Enter \"p\" to roll the die (press \"x\" to exit) : ");
        //Set target and quit imputs                                                  
        while(true){
            char targetChar = 'p'; //needed imput is r to loop
            char quitChar = 'x'; //ends program if "q" is pressed
            char inputChar = scan.next().charAt(0);
        
        //determine process when quit
        if (inputChar == quitChar){
            System.out.println("Program Terminated");
            break;
        }    
        
        //determine process when looped
        if (inputChar == targetChar) {    
    
    //Number Generator System
        //Scan for Imput:
        Scanner scanner = new Scanner(System.in);
        //Random Number Generator:
        
            //Declare random number generator
            Random generator = new Random();
        
            //First set of numbers
            int num1;       
            int num2;
            int num3;
            num1 = generator.nextInt(8);
            num2 = generator.nextInt(8);
            num3 = generator.nextInt(8);
        
            //Second set of numbers
            int num4thru6;
            num4thru6 = generator.nextInt(656);
            String formatnum4thru6 = String.format("%03d", num4thru6);
                    
            //Third set of numbers
            int num7thru10;
            num7thru10 = generator.nextInt(10000);
            String formatnum7thru10 = String.format("%04d", num7thru10);
            
            //Print phone number
            System.out.println("Random Phone Number: " + (num1) + (num2) + (num3) + "-" + (formatnum4thru6) + "-" + (formatnum7thru10));       
        }
    }
}
}
